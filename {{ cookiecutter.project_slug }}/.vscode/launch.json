{

  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Run main.py",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/{{ cookiecutter.project_slug }}/main.py",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Pytest: Debug Tests",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/.venv/bin/pytest",
      "args": ["-q"],
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}